{
  "name": "nuxtflix",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Matthew Wagerfield <matthew@wagerfield.com>",
  "homepage": "https://github.com/wagerfield/nuxtflix#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wagerfield/nuxtflix.git"
  },
  "bugs": {
    "url": "https://github.com/wagerfield/nuxtflix/issues"
  },
  "scripts": {
    "dev": "nuxt",
    "serve": "serve dist",
    "analyse": "nuxt build --analyze",
    "analyze": "nuxt build --analyze",
    "start": "nuxt start --modern=server",
    "build": "nuxt build --modern=server",
    "generate": "nuxt generate --modern=client",
    "format": "prettier-eslint --write '*.{js,md}' 'src/**/*.{js,json,scss,vue}'",
    "lint": "eslint . --ext .js,.vue"
  },
  "lint-staged": {
    "src/**/*.{html,js,json,scss,vue}": [
      "prettier-eslint --write",
      "eslint --ext .js,.vue",
      "git add"
    ],
    "*.{js,md}": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxtjs/pwa": "^2.6.0",
    "@nuxtjs/sitemap": "^0.2.0",
    "@nuxtjs/style-resources": "^0.1.1",
    "case": "^1.6.0",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.3.4",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-import-resolver-nuxt": "^0.1.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "nuxt-svg-loader": "^1.0.0",
    "prettier-eslint-cli": "^4.7.1",
    "sass-loader": "^7.1.0",
    "serve": "^10.1.1"
  }
}
